				        					Oportunidades__r: v.Oportunidades__r || [],
				        					Docente__c: v.Docente__c,
				        					Docente__c__t: v.Docente__r != null ? v.Docente__r.Name : '',
				        					Materia__c: v.Materia__c,
				        					Materia__c__t: v.Materia__r != null ? v.Materia__r.Name : ''
				        				});

