			            	tit: 0,  //total items
			            	cpa: 1, //current page
			            	tpa: 0, //total pages
			            	fir: 'Primero', // first
			            	pre: 'Ant', // previous
			            	next: 'Sig',
			            	last: 'Último',
			            	psi : [5, 10, 15, 20, 25, 50, 100], //page sizes
			            	sfi: 'EstatusBeca__c', //sort field
			            	rev: false, //reverse
			            	sea: ''//search
